<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fdanielpm.petagram.fragments.PerfilFragment">

    <ImageView
        android:id="@+id/ivPetPerfilDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dog01"
        />
    <TextView
        android:id="@+id/tvPetPerfilDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_name"
        android:layout_below="@+id/ivPetPerfilDetalle"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPetDetail"
        android:layout_below="@+id/tvPetPerfilDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout >
